<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/image_card_view"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    card_view:cardCornerRadius="5dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="7dp"
    android:layout_marginBottom="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/card_title_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="16sp"
            android:gravity="left|center_vertical"
            android:text="@string/nutrition_intake"
            android:background="@drawable/card_textview_border" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="0,1"
            >
            <TableRow>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:padding="15dp"
                    android:src="@drawable/weekly_fat" />
                <!--android:paddingTop="10dp"-->
                <!--android:paddingBottom="5dp"-->
                <!--android:paddingLeft="5dp"-->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:padding="15dp"
                    android:src="@drawable/weekly_vitamin" />
                <!--android:paddingTop="10dp"-->
                <!--android:paddingBottom="5dp"-->
                <!--android:paddingRight="5dp"-->
            </TableRow>
            <TableRow>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:padding="15dp"
                    android:src="@drawable/weekly_calcium" />
                <!--android:paddingBottom="10dp"-->
                <!--android:paddingTop="5dp"-->
                <!--android:paddingLeft="5dp"-->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:padding="15dp"
                    android:src="@drawable/weekly_iron" />
                <!--android:paddingBottom="10dp"-->
                <!--android:paddingTop="5dp"-->
                <!--android:paddingRight="5dp"-->
            </TableRow>
            </TableLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>

